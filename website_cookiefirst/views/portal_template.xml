<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>

<template id="layout_footer_copyright_inh_cookiefirst" inherit_id="website.layout_footer_copyright">
    <xpath
        expr="//span[@t-field='res_company.name']"
        position="after"
    >
        <span><a href="/legal/cookies-policy">Cookies Policy</a>
        </span>
    </xpath>
</template>

<template id="layout" inherit_id="website.layout">
    <xpath expr="//script[@t-if='website and website.google_analytics_key']" position="attributes">
        <attribute name="type">text/plain</attribute>
        <attribute name="data-cookiefirst-category">performance</attribute>
    </xpath>
    <xpath expr="//script[last()]" position="after">
        <t t-if="website.cookiefirst_identifier">
            <script
                src="https://consent.cookiefirst.com/banner.js"
                t-att-data-cookiefirst-key="website.cookiefirst_identifier"
            />
        </t>
    </xpath>
</template>

</data>
</openerp>
